{{#each this}}
<h2 class="card-counries-title">{{name}}</h2>
<div class="card-countries">
    <div class="card-countries-description">
        <p class="card-countries-capital">Capital:{{capital}}</p>
        <p class="card-countries-population">Population:{{population}}</p>
        <p class="card-countries-languages">Languages:</p>
        <ul class="list-languages">
            {{#each languages}}
            <li class="item-languages">{{name}}</li>
            {{/each}}
        </ul>
    </div>
    <div class="card-countries-img">
        <img src="{{flag}}" alt="{{demonym}}" width="300px" height="250">
    </div>
</div>

{{/each }}